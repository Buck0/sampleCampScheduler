<% provide(:title, 'All Campers') %>
<h1>All Campers</h1>

<%= will_paginate %>
<ul class="campers">
  <% @campers.each do |camper| %>
    <li>
      <%= link_to camper.name, camper %> &nbsp; | &nbsp; 
      <%= link_to "Edit", edit_camper_path(camper) %> &nbsp; | &nbsp; 
      <%= link_to "Delete", camper, method: :delete, style: "color: red" %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>