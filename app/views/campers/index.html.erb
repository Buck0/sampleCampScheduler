<% provide(:title, 'All Campers') %>
<h1>All Campers</h1>

<h2>Total number of campers: <%= "#{@all.size}" %></h2>

<div class="center">
  <%= link_to "Totals for Camptivities", camptivities_path, class: "btn btn-primary" %>
</div>

<%= will_paginate %>
<ul class="campers">
  <% @campers.each do |camper| %>
    <li>
      <%= link_to camper.name, camper %> &nbsp; | &nbsp; 
      <%= link_to "Edit", edit_camper_path(camper) %> &nbsp; | &nbsp; 
      <%= link_to "Delete", camper, method: :delete, style: "color: red" %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>